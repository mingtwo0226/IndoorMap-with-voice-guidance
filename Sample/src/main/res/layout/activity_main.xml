<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sails.example.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <FrameLayout
            android:id="@+id/SAILSMap"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/zoomin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/lockcenter"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:src="@drawable/zoominb" />

        <ImageView
            android:id="@+id/zoomout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/zoomin"
            android:layout_alignTop="@+id/lockcenter"
            android:baselineAlignBottom="false"
            android:src="@drawable/zoomoutb" />

        <ImageView
            android:id="@+id/lockcenter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/center1" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="52dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#737c7e"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e1e3e4"
        android:orientation="vertical">

        <Button
            android:id="@+id/curLocation"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fefefe"
            android:text="현재 위치"
            android:textColor="#737c7e"
            android:textSize="25dp" />

        <Button
            android:id="@+id/setDest"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fefefe"
            android:text="목적지 지정"
            android:textColor="#737c7e"
            android:textSize="25dp" />


        <Button
            android:id="@+id/buildingInfo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fefefe"
            android:text="건물 정보"
            android:textColor="#737c7e"
            android:textSize="25dp" />

        <Button
            android:id="@+id/Use"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fefefe"
            android:text="사용 방법"
            android:textColor="#737c7e"
            android:textSize="25dp" />

    </LinearLayout>

</LinearLayout>